# 环境变量配置文件示例
# 复制此文件为 .env 并填入实际值

# Telegram Bot Token (必须)
# 从 @BotFather 获取
TELEGRAM_BOT_TOKEN=asdfa

# 可选：设置特定的管理员ID和允许的群组
# ADMIN_IDS=123456789,987654321
# ALLOWED_GROUPS=-1001234567890,-1009876543210

# ============= AI 总结功能配置 =============

# 是否启用 AI 总结功能
ENABLE_AI_SUMMARY=true

# AI 服务提供商 (openai, claude, local)
AI_PROVIDER=openai

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude 配置（如果使用 Claude）
# ANTHROPIC_API_KEY=your_claude_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# 总结配置
SUMMARY_LANGUAGE=zh
SUMMARY_LENGTH=medium
SUMMARY_STYLE=bullet

# 自动总结时间（24小时格式）
AUTO_SUMMARY_TIME=23:30

# 最小消息数量才触发总结
MIN_MESSAGES_FOR_SUMMARY=10

# 是否在群组中发送总结
SEND_SUMMARY_TO_CHAT=false